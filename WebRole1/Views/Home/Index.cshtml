@{
    ViewBag.Title = "Face Analysis";
}

<div class="jumbotron">
    <h1>Face Analysis</h1>
    <p class="lead">Upload an image to detect faces and analyze attributes.</p>

    @using (Html.BeginForm("Analyze", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="imageFile">Select Image:</label>
            <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" required />
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Analyze</button>
    }
</div>
